method BUILD_SELECT_OPTIONS .

    DATA:
         lr_cmp_usage TYPE REF TO if_wd_component_usage,
         lv_tmp_text type string,
         lr_field TYPE REF TO data.

  lr_cmp_usage = wd_this->wd_cpuse_select_options( ).
  IF lr_cmp_usage->has_active_component( ) IS INITIAL.
    lr_cmp_usage->create_component( ).
  ENDIF.

  wd_comp_controller->m_sel_opt = wd_this->wd_cpifc_select_options( ).
  wd_comp_controller->m_helper  = wd_comp_controller->m_sel_opt->init_selection_screen( ).

  wd_comp_controller->m_helper->set_global_options(
    i_display_btn_cancel = abap_false
    i_display_btn_check  = abap_false
    i_display_btn_reset  = abap_true ).
  lv_tmp_text = wd_assist->if_wd_component_assistance~get_text( '008' ). "Suchen & Filtern
  wd_comp_controller->m_helper->add_block(
   i_id         = `BL01`
   i_block_type = if_wd_select_options=>mc_block_type_tray
   i_title      = lv_tmp_text ).

  lr_field = wd_comp_controller->m_helper->create_range_table( `ZGKI_TL_SMU_VN-NAME` ).
  lv_tmp_text = wd_assist->if_wd_component_assistance~get_text( '012' ). "Name des Nachweises
  wd_comp_controller->m_helper->add_selection_field(
   i_id           = `NAME`
   i_within_block = `BL01`
   i_description = lv_tmp_text
   i_value_help_id = 'ZGKI_SMU_SH_NAME_WD'
   i_value_help_type = if_wd_value_help_handler=>co_prefix_searchhelp
   it_result      = lr_field ).
  FREE lr_field.

  lr_field = wd_comp_controller->m_helper->create_range_table( `ZGKI_TL_SMU_VN-VERANTWORTUNG` ).
  lv_tmp_text = wd_assist->if_wd_component_assistance~get_text( '009' ). "Verantwortung
  wd_comp_controller->m_helper->add_selection_field(
   i_id           = `VERANTWORTLICHKEIT`
   i_within_block = `BL01`
   i_description = lv_tmp_text
